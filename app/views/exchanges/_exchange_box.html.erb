<div class='exchange_box col-sm-12'>
  <div class='card'>

    <div class='card-header text-center'>
      Simule sua convers√£o
    </div>

    <div class='card-block'>
      <div class='select_area'>
          <div class='form-group'>
            <p class='title'>Moeda Local</p>
            <%= select_tag 'source_currency', options_for_select(currency_list, 'BRL'), class: 'form-control', id: 'source_currency' %>
          </div>

          <button type="button" id="btn_invert">
            <img src="data:image/svg+xml;utf8;base64," />
          </button>

        <div class='form-group'>
            <p class='title'>Moeda Pretendida</p>
            <%= select_tag 'target_currency', options_for_select(currency_list, 'USD'), class: 'form-control', id: 'target_currency'%>
          </div>
        </div>

        <div class='input_area'>
          <div class='form-group'>
            <p class='title'>Valor Moeda Local</p>
            <input type='number' name='amount' id='amount' class='form-control' placeholder='Exemplo $10' step='any' required>
          </div>
          <div class='form-group'>
            <input type='text' id='result' name='result' class='form-control' placeholder='Resultado' readonly>
          </div>
        </div>
    </div>
  </div>
</div>
